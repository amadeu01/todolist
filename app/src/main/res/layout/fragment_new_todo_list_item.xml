<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amadeucavalcantefilho.todolist.fragment.NewTodoListItemActivityFragment"
    tools:showIn="@layout/activity_new_todo_list_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:id="@+id/new_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Task"
            android:textSize="21sp"/>
        <EditText
            android:id="@+id/new_task_title_edit_text"
            android:layout_below="@id/new_task_title"
            android:hint="Give us a title..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/new_task_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:layout_below="@id/new_task_title_edit_text"
            android:textSize="21sp"/>
        <EditText
            android:id="@+id/new_task_detail_edit_text"
            android:layout_below="@id/new_task_detail"
            android:layout_width="match_parent"
            android:hint="Give us more detail about your task..."
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>
